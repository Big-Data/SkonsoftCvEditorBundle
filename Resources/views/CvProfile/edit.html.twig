{% form_theme edit_form 'ToaTwitterBootstrapBundle:Form:widgets.html.twig' %}

{% extends "SkonsoftCvEditorBundle::layout.html.twig" %}
{% block container %}

<h1 class="page-header">{{ 'CvProfile'|trans }} {{ 'edit'|trans }}</h1>

<form class="form-horizontal" action="{{ path('cv_profile_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    
    {% include "SkonsoftCvEditorBundle:CvProfile:tabForm.html.twig" with {'form':edit_form} %}
        
    <p>
        <button class="btn" type="submit">
            <i class="icon-pencil"></i>
            {{ 'edit'|trans }}
        </button>
    </p>
</form>


    <form action="{{ path('cv_profile_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">
            <i class="icon-trash"></i>
            {{ 'delete'|trans }}
        </button>
    </form>

    <a class="btn" href="{{ path('cv_profile') }}">
        <i class="icon-th-list"></i>
        {{ 'back to the list'|trans }}
    </a>

{% endblock %}
{% extends 'ToaTwitterBootstrapBundle::layout.html.twig' %}
{% block content %}

<h1 class="page-header">{{ 'CvPersonal'|trans }}</h1>

<table class="record_properties table table-bordered table-condensed table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Lastname</th>
            <td>{{ entity.lastName }}</td>
        </tr>
        <tr>
            <th>Lastnameprefix</th>
            <td>{{ entity.lastNamePrefix }}</td>
        </tr>
        <tr>
            <th>Initials</th>
            <td>{{ entity.initials }}</td>
        </tr>
        <tr>
            <th>Firstname</th>
            <td>{{ entity.firstName }}</td>
        </tr>
        <tr>
            <th>Middlename</th>
            <td>{{ entity.middleName }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Dateofbirth</th>
            <td>{% if entity.dateOfBirth %}{{ entity.dateOfBirth|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Placeofbirth</th>
            <td>{{ entity.placeOfBirth }}</td>
        </tr>
        <tr>
            <th>Maritalstatus</th>
            <td>{{ entity.maritalStatus }}</td>
        </tr>
        <tr>
            <th>Nationality</th>
            <td>{{ entity.nationality }}</td>
        </tr>
        <tr>
            <th>Gendercode</th>
            <td>{{ entity.genderCode }}</td>
        </tr>
        <tr>
            <th>Driverslicence</th>
            <td>{{ entity.driversLicence }}</td>
        </tr>
        <tr>
            <th>Availability</th>
            <td>{{ entity.availability }}</td>
        </tr>
    </tbody>
</table>

    <p>
        <a class="btn" href="{{ path('cv_personal_edit', { 'id': entity.id }) }}">
            <i class="icon-pencil"></i>
            {{ 'edit'|trans }}
        </a>
    </p>

    <form action="{{ path('cv_personal_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit">
            <i class="icon-trash"></i>
            {{ 'delete'|trans }}
        </button>
    </form>

    <a class="btn" href="{{ path('cv_personal') }}">
        <i class="icon-th-list"></i>
        {{ 'back to the list'|trans }}
    </a>

{% endblock %}